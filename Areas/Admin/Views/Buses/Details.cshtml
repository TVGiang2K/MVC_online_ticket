@model MVC_online_book_ticket.Models.Buses

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Bus Detail</h5>

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BusNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BusNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BusTypes)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BusTypes)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LicensePlate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LicensePlate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SeatCapacity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SeatCapacity)
                </dd>
            </dl>
            <div class="row">
                <div class="col-sm-2 col-xl-2 mx-2 ">
                    <a asp-action="Edit" asp-route-id="@Model.BusesId" class=" d-flex btn btn-outline-link m-1 btn btn-primary">Edit</a>
                </div>
                <div class="col-sm-2 col-xl-2 mx-2 ">
                    <a asp-action="Index" class="d-flex btn btn-outline-link m-1 btn btn-warning">Back to list</a>
                </div>
            </div>
        </div>
    </div>
</div>
