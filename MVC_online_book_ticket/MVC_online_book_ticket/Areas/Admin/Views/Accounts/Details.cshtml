@model X.PagedList.IPagedList<MVC_online_book_ticket.Models.Reservations>
@using X.PagedList.Mvc.Core;
@{
    var pageSize = Model.PageSize;
    var currentPage = Model.PageNumber;
    var indexStart = (currentPage - 1) * pageSize + 1;
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
    var ac = ViewBag.account;
}

<div class="container-fluid">
        <div class="card">
            <div class="card-body">

            <div class="row">
                <div class="col-md-6 my-2">
                    <h3 >Account Detail</h3>
                </div>
                <div class="col-md-6 my-2">
                    <a asp-action="Edit" asp-route-id="@ac.AccountsId" class="btn btn-primary mx-2">Edit</a>
                    <a asp-action="Index" class="btn btn-warning mx-2">Back to list</a>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <img src="/img/accounts/@ac.Avatar" alt="@ac.Avatar" class="card-img-top" width="100%" />
                        <div class="card-body">
                            <h5 class="card-title">Name</h5>
                            <p class="card-text">
                                @ac.Name
                            </p>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Age</h5>
                            <p class="card-text">
                                @ac.Age
                            </p>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Birthday</h5>
                            <p class="card-text">
                                @ac.Birthday
                            </p>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Gender</h5>
                            <p class="card-text">
                                @if (ac.Gender == true)
                                {
                                    <span>Man</span>
                                }
                                else
                                {
                                    <span>Woman</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Username</h5>
                            <p class="card-text">
                                @ac.Username
                            </p>
                        </div>
                        
                        <div class="card-body">
                            <h5 class="card-title">Phone</h5>
                            <p class="card-text">
                                @ac.Phone
                            </p>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Email</h5>
                            <p class="card-text">
                                @ac.Email
                            </p>
                        </div>
                        
                        <div class="card-body">
                            <h5 class="card-title">Qualification</h5>
                            <p class="card-text">
                                @ac.Qualification
                            </p>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Position</h5>
                            <p class="card-text">
                                @ac.Position
                            </p>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Role</h5>
                            <p class="card-text">
                                @ac.Role
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>

<div class="container-fluid">
    <div class="card w-100">
        <div class="card-body p-4">
            <h5 class="d-flex card-title fw-semibold mb-4">List of Reservations on the Account</h5>

            <div class="table-responsive">
                <table class="table table-bordered text-nowrap mb-0 align-middle border-1">
                    <thead class="text-dark fs-4">
                        <tr>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">No</h6>
                            </th>
                            <th class="border-bottom-0">
                            <h6 class="fw-semibold mb-0">@Html.DisplayNameFor(model => model.FirstOrDefault().ReservationsId)</h6>
                            </th>
                            <th class="border-bottom-0">
                            <h6 class="fw-semibold mb-0">@Html.DisplayNameFor(model => model.FirstOrDefault().ReservationDateTime)</h6>
                            </th>
                            <th class="border-bottom-0">
                            <h6 class="fw-semibold mb-0">@Html.DisplayNameFor(model => model.FirstOrDefault().ActiveReservation)</h6>
                            </th>
                            <th class="border-bottom-0">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var r in Model)
                    {
                        
                    <tr>
                            <td class="border-bottom-0">
                                @indexStart
                            </td>
                            <td class="border-bottom-0">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().ReservationsId)
                            </td>
                            <td class="border-bottom-0">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().ReservationDateTime)

                            </td>
                            <td class="border-bottom-0">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().ActiveReservation)

                            </td>
                        </tr>
                        indexStart++;
                    }

                    </tbody>
                </table>
            <br />
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }),    new PagedListRenderOptions
            {
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" }
            }
            )
            </div>
        </div>
    </div>
</div>
